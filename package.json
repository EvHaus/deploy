{
	"name": "@globexdesigns/deploy",
	"description": "Deployment script for public websites",
	"license": "MIT",
	"author": "Ev Haus",
	"homepage": "https://github.com/GlobexDesignsInc/deploy#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GlobexDesignsInc/deploy.git"
	},
	"bugs": {
		"url": "https://github.com/GlobexDesignsInc/deploy/issues"
	},
	"version": "0.4.0",
	"bin": {
		"deploy": "./bin/index.js"
	},
	"scripts": {
		"build": "babel src -d bin",
		"eslint": "eslint-cumul8 src",
		"flow": "flow",
		"flow-typed:update": "rm -rf flow-typed && flow-typed install --ignoreDeps dev",
		"lint": "yarn packagelint && yarn eslint",
		"packagelint": "prettier-package-json --use-tabs --write ./package.json",
		"prepare": "yarn build",
		"start": "babel-node ./src run -D example -v",
		"test": "yarn flow && yarn lint"
	},
	"dependencies": {
		"@hapi/joi": "^15.0.3",
		"archiver": "^3.0.0",
		"chalk": "^2.4.2",
		"commander": "^2.20.0",
		"cosmiconfig": "^5.2.1",
		"glob": "^7.1.4",
		"inquirer": "^6.3.1",
		"node-ssh": "^6.0.0",
		"ora": "^3.4.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.4",
		"@babel/core": "^7.4.5",
		"@babel/node": "^7.4.5",
		"@babel/plugin-proposal-class-properties": "^7.4.4",
		"@babel/preset-env": "^7.4.5",
		"@babel/preset-flow": "^7.0.0",
		"eslint-config-cumul8": "^8.0.50",
		"flow-bin": "^0.98.1",
		"flow-typed": "^2.5.2",
		"prettier-package-json": "^2.1.0"
	},
	"keywords": [
		"automation",
		"deploy",
		"deployer",
		"deployment",
		"digitalocean",
		"droplet",
		"node",
		"nodejs"
	],
	"publishConfig": {
		"access": "public"
	}
}
